<?xml version="1.0" encoding="utf-8" ?>
<Application xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Horus.App">
    <Application.Resources>
        <ResourceDictionary>
            <!--#region Item-->
            <Color x:Key="TitleTextColorItem">#1A1A1A</Color>
            <Color x:Key="ProgressBarColorItem">#F49390</Color>
            <Color x:Key="GridBackgroundColorItem">#FFFFFF</Color>
            <Color x:Key="DescriptionTextColorItem">#828282</Color>
            <!--#Endregion-->

            <!--#region ItemSelected-->
            <Color x:Key="TextColorItemSelected">#FFFFFF</Color>
            <Color x:Key="GridBackgroundColorItemSelected">#F49390</Color>
            <!--#Endregion-->

            <!--#Endregion-->
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="Resources/Styles/AppStyles.xaml" />
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Application.Resources>
</Application>
